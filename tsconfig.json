{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "lib": ["ESNext","DOM","DOM.Iterable"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "#discord/*": ["discord/*"],
      "#umass/*": ["umass/*"],
      "#shared/*": ["shared/*"]
    },
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"],
}
