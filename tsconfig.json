{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "lib": ["ESNext","DOM","DOM.Iterable"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"]
}
